    {% block head_style %}
        {% stylesheets filter='cssrewrite' 
            '@bootstrap_css'
        %}
        <link rel = "stylesheet" href="{{ asset_url }}" type = "text/css" />
        {% endstylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/assoclanding/css/landing-page.css') }}" type="text/css" media="all" />
